{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
